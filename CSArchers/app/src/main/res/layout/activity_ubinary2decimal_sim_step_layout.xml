<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_ub2d_sim_step_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sand"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/activity_ub2d_sim_step_row_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_ub2d_sim_step_bit_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/minecraft"
            android:gravity="center"
            android:text="Bit"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_ub2d_sim_step_power_of_two_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/minecraft"
            android:gravity="center"
            android:text="Power of Two"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_ub2d_sim_step_product_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/minecraft"
            android:gravity="center"
            android:text="Product"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>