<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_ud2b_sim_step_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sand"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/activity_ud2b_sim_step_row_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_ud2b_sim_step_dividend_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/minecraft"
            android:gravity="center"
            android:text="Dividend"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_ud2b_sim_step_quotient_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/minecraft"
            android:gravity="center"
            android:text="Quotient"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_ud2b_sim_step_remainder_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/minecraft"
            android:gravity="center"
            android:text="Remainder"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_ud2b_sim_step_bit_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/minecraft"
            android:gravity="center"
            android:text="Bit"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>