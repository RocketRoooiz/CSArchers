<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/register_tv_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pixelify_sans"
            android:gravity="center"
            android:padding="20dp"
            android:text="Register Account"
            android:textColor="#334767"
            android:textSize="34sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/register_tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixelify_sans"
                android:text="Email:"
                android:textColor="#334767"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/register_et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#334767"
                android:ems="10"
                android:fontFamily="@font/pixelify_sans"
                android:inputType="textEmailAddress"
                android:textColor="#334767" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/register_tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixelify_sans"
                android:text="Username:"
                android:textColor="#334767"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/register_et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#334767"
                android:ems="10"
                android:fontFamily="@font/pixelify_sans"
                android:inputType="text"
                android:textColor="#334767" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/register_tv_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixelify_sans"
                android:text="Password:"
                android:textColor="#334767"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/register_et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#334767"
                android:ems="10"
                android:fontFamily="@font/pixelify_sans"
                android:inputType="textPassword"
                android:textColor="#334767" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/register_tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/pixelify_sans"
                android:gravity="center"
                android:text="Already Have an Account?"
                android:textColor="#334767" />

        </LinearLayout>

        <Button
            android:id="@+id/register_btn_submit"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#334767"
            android:fontFamily="@font/pixelify_sans"
            android:text="submit"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>