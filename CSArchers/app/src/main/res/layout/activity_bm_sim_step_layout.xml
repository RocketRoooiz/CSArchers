<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_bm_sim_step_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sand"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/activity_bm_sim_step_header_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_bm_sim_step_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="@font/minecraft"
            android:text="Step 1:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/activity_bm_sim_step_a_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/minecraft"
            android:gravity="center"
            android:text="A"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/activity_bm_sim_step_q_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/minecraft"
            android:gravity="center"
            android:text="Q"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_bm_sim_step_initial_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_bm_sim_step_initial_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="@font/minecraft"
            android:text="Initial"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_bm_sim_step_initial_a_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/minecraft"
            android:gravity="center"
            android:text="00000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_bm_sim_step_initial_q_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/minecraft"
            android:gravity="center"
            android:text="00000000"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_bm_sim_step_q_check_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_bm_sim_step_q_check_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/minecraft"
            android:text="Q0 = 1: Add M"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_bm_sim_step_q_check_c_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/minecraft"
            android:gravity="center"
            android:text="C = 1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_bm_sim_step_q_check_a_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/minecraft"
            android:gravity="center"
            android:text="00000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_bm_sim_step_q_check_q_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/minecraft"
            android:gravity="center"
            android:text="00000000"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_bm_sim_step_shr_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_bm_sim_step_shr_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/minecraft"
            android:text="Shift Right"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_bm_sim_step_shr_c_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/minecraft"
            android:gravity="center"
            android:text="C = 0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_bm_sim_step_shr_a_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/minecraft"
            android:gravity="center"
            android:text="00000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_bm_sim_step_shr_q_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/minecraft"
            android:gravity="center"
            android:text="00000000"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>