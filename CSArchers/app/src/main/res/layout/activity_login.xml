<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/title_Iv"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:src="@drawable/title"
        app:layout_constraintTop_toTopOf="@+id/linearLayout4" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/login_tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/minecraft"
                android:text="Email: "
                android:textColor="#334767"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/login_et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#334767"
                android:ems="10"
                android:fontFamily="@font/minecraft"
                android:inputType="text"
                android:textColor="#334767" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/login_tv_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/minecraft"
                android:text="Password:"
                android:textColor="#334767"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/login_et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#334767"
                android:ems="10"
                android:fontFamily="@font/minecraft"
                android:inputType="textPassword"
                android:textColor="#334767" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/login_tv_forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/minecraft"
                android:gravity="center"
                android:text="Forgot Password?"
                android:textColor="#334767"
                android:visibility="gone" />

            <TextView
                android:id="@+id/login_tv_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/minecraft"
                android:gravity="center"
                android:text="Create Account"
                android:textColor="#334767" />

        </LinearLayout>

        <Button
            android:id="@+id/login_btn_submit"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#334767"
            android:fontFamily="@font/minecraft"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>