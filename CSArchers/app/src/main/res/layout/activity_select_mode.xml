<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageButton
        android:id="@+id/select_mode_btn_leaderboard"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:adjustViewBounds="true"
        android:alpha="1.0"
        android:background="@android:color/transparent"
        android:contentDescription="Trophy button"
        android:elevation="0dp"
        android:outlineProvider="none"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/trophy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/select_mode_logout_btn"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#D05E5A"
        android:fontFamily="@font/pixelify_sans_bold"
        android:text="Logout"
        android:textColor="#E9E4E4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginTop="60dp"
        android:contentDescription="Title logo"
        android:padding="20dp"
        android:scaleX=".75"
        android:scaleY=".75"
        android:src="@drawable/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-150dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/minecraft"
            android:text="Ready for some ARCHery?"
            android:textColor="#334666"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/select_mode_tv_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/minecraft"
            android:gravity="center"
            android:text="textview"
            android:textColor="#334666"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/select_mode_btn_sim"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="simulation mode"
            android:scaleType="fitXY"
            android:src="@drawable/simulation_mode_btn" />

        <ImageButton
            android:id="@+id/select_mode_btn_game"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="game mode"
            android:scaleType="fitXY"
            android:src="@drawable/game_mode_btn" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>