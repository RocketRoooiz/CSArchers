<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bm_sim_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/simulation_background"
    android:padding="10dp">

    <TextView
        android:id="@+id/activity_bm_sim_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/minecraft"
        android:text="Unsigned Binary Multiplier"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/activity_bm_sim_multiplicand_ll"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_bm_sim_title_tv">

        <TextView
            android:id="@+id/activity_bm_sim_multiplicand_header_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/minecraft"
            android:text="Multiplicand (Range: 0 - 255):"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/activity_bm_sim_multiplicand_et"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="#E4C39F"
            android:fontFamily="@font/minecraft"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#554739"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_bm_sim_multiplier_ll"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_bm_sim_multiplicand_ll">

        <TextView
            android:id="@+id/activity_bm_sim_multiplier_header_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/minecraft"
            android:text="Multiplier (Range: 0 - 255):"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/activity_bm_sim_multiplier_et"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="#E4C39F"
            android:fontFamily="@font/minecraft"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#554739"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/activity_bm_sim_calculate_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_weight="5"
        android:backgroundTint="#564839"
        android:fontFamily="@font/minecraft"
        android:text="Calculate"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_bm_sim_multiplier_ll" />

    <LinearLayout
        android:id="@+id/activity_bm_sim_outputs_ll"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_bm_sim_calculate_btn">

        <LinearLayout
            android:id="@+id/activity_bm_output_binary_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_bm_sim_binary_output_header_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/minecraft"
                android:text="Result:"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/activity_bm_sim_binary_output_bits_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E2C19E"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/activity_bm_sim_byte1_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/activity_bm_sim_bit15_tv"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/minecraft"
                        android:gravity="center"
                        android:text="0" />

                    <TextView
                        android:id="@+id/activity_bm_sim_bit14_tv"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/minecraft"
                        android:gravity="center"
                        android:text="0" />

                    <TextView
                        android:id="@+id/activity_bm_sim_bit13_tv"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/minecraft"
                        android:gravity="center"
                        android:text="0" />

                    <TextView
                        android:id="@+id/activity_bm_sim_bit12_tv"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/minecraft"
                        android:gravity="center"
                        android:text="0" />

                    <TextView
                        android:id="@+id/activity_bm_sim_bit11_tv"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/minecraft"
                        android:gravity="center"
                        android:text="0" />

                    <TextView
                        android:id="@+id/activity_bm_sim_bit10_tv"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/minecraft"
                        android:gravity="center"
                        android:text="0" />

                    <TextView
                        android:id="@+id/activity_bm_sim_bit9_tv"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/minecraft"
                        android:gravity="center"
                        android:text="0" />

                    <TextView
                        android:id="@+id/activity_bm_sim_bit8_tv"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/minecraft"
                        android:gravity="center"
                        android:text="0" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_bm_sim_byte0_ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/activity_bm_sim_bit7_tv"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/minecraft"
                        android:gravity="center"
                        android:text="0" />

                    <TextView
                        android:id="@+id/activity_bm_sim_bit6_tv"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/minecraft"
                        android:gravity="center"
                        android:text="0" />

                    <TextView
                        android:id="@+id/activity_bm_sim_bit5_tv"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/minecraft"
                        android:gravity="center"
                        android:text="0" />

                    <TextView
                        android:id="@+id/activity_bm_sim_bit4_tv"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/minecraft"
                        android:gravity="center"
                        android:text="0" />

                    <TextView
                        android:id="@+id/activity_bm_sim_bit3_tv"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/minecraft"
                        android:gravity="center"
                        android:text="0" />

                    <TextView
                        android:id="@+id/activity_bm_sim_bit2_tv"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/minecraft"
                        android:gravity="center"
                        android:text="0" />

                    <TextView
                        android:id="@+id/activity_bm_sim_bit1_tv"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/minecraft"
                        android:gravity="center"
                        android:text="0" />

                    <TextView
                        android:id="@+id/activity_bm_sim_bit0_tv"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/minecraft"
                        android:gravity="center"
                        android:text="0" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <!-- Minecraft Font Source: https://www.dafont.com/minecraft.fonthttps://www.dafont.com/minecraft.font-->
</androidx.constraintlayout.widget.ConstraintLayout>