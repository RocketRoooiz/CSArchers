<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/topics_logout_btn"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#DB0202"
            android:fontFamily="@font/pixelify_sans_bold"
            android:text="Logout"
            android:textColor="#E9E4E4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/topics_tv_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/pixelify_sans"
            android:gravity="center"
            android:padding="20dp"
            android:text="Topics"
            android:textColor="#334767"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/select_mode_btn_leaderboard"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:alpha="1.0"
            android:background="@android:color/transparent"
            android:contentDescription="Trophy button"
            android:outlineProvider="none"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/trophy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/topics_tv_arithmetic_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/minecraft"
                    android:paddingLeft="5dp"
                    android:text="Integer Arithmetic"
                    android:textColor="#334767"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/int_arithmetic_btn"
                        android:layout_width="400dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/topic_integer_arithmetic_btn" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/topics_tv_base_conversion_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/minecraft"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:text="Number System Base Conversion"
                    android:textColor="#334767"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/num_sys_btn"
                        android:layout_width="400dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/topic_number_base_systems_btn" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/topics_tv_iee_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/minecraft"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:text="IEEE 754 Representation"
                    android:textColor="#334767"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/ieee_btn"
                        android:layout_width="400dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/topic_ieee_btn" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/minecraft"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:text="Unicode Representation"
                    android:textColor="#334767"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/utf_btn"
                        android:layout_width="400dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/topic_unicode_utf_btn" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>